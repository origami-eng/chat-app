<div class="chat-header">
  <div class="chat-room-name">
    <%= @room.name %>
  </div>
  <div class="destroy-chat-room">
     <%= link_to "チャットを終了する", room_path(@room), data: { turbo_method: :delete } %>
  </div>
</div>

<div class="my-messages">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], html: {class: 'message-post-form-unit'}, local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'message-post-form', placeholder: 'Type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-send-btn' %>
<% end %>